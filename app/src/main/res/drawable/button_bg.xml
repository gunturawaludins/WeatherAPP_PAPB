<!-- button_bg.xml -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#3F51B5" /> <!-- Warna latar saat tombol ditekan -->
            <corners android:radius="8dp" /> <!-- Sudut tombol -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- Warna latar tombol -->
            <corners android:radius="8dp" /> <!-- Sudut tombol -->
        </shape>
    </item>
</selector>
